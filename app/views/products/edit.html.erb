<%= form_for @p  do |f|%>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>

    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_field :description %>

    </div>
    <div>
      <%= f.label :price %>
      <%= f.text_field :price %>

    </div>

    <div>
      <%= f.collection_select(:category_id,Category.all,:id,:name) %>

    </div>
    <%= f.submit %>



<% end %>